extends layout

block content
  h1 To Do Items
  table
    thread
      tr
        th Description
        th Completed?
        th Actions
    tbody
      each item in toDoItems
        tr
          td= item.description
          td= item.completed
          td
            div.row
              if item.completed
                a(href=`incomplete/${item.id}`) Mark Incomplete
              else
                a(href=`complete/${item.id}`) Mark Complete
                br
                br
                a(href=`delete/${item.id}`) Delete Item
                br
                br
                a(href=`edit/${item.id}`) Edit Item
                br
                br

  a(href="/add") Add Item